                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#4C566A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
