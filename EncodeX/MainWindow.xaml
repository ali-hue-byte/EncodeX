<Window x:Class="EncodeX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EncodeX"
        mc:Ignorable="d"
        Title="EncodeX" Height="620" Width="1000" ResizeMode="NoResize"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1A1E28" Offset="0"/>
            <GradientStop Color="#2A2F38" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="174"/>
            <ColumnDefinition Width="338"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="338"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="118"/>
            <RowDefinition Height="99"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="328"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.RowSpan="4" BorderBrush="#149414" BorderThickness="0,0,2,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#2E3440" Offset="0"/>
                    <GradientStop Color="#303447" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <Border x:Name="Border_encrypt" Grid.Row="2" Grid.Column="1" CornerRadius="10" Background="#1A1E28" BorderBrush="#149414" BorderThickness="2" Margin="60,24,6,192" Grid.RowSpan="2">
            <TextBox x:Name ="input_field" TextWrapping="Wrap" Background="#1A1E28" BorderThickness="0" VerticalScrollBarVisibility="Hidden"  Margin="8,8,8,8" Foreground="White" FontSize="15"/>
        </Border>

        <Border x:Name="Border_decrypt" Grid.Row="2" Grid.Column="3" Grid.RowSpan="2" CornerRadius="10" Background="#1A1E28" BorderBrush="#149414" BorderThickness="2" Margin="2,24,60,192">
            <TextBox x:Name="encrypted_field" TextWrapping="Wrap" Background="#1A1E28" BorderThickness="0" VerticalScrollBarVisibility="Hidden" Margin="8,8,8,8" Foreground="White" FontSize="15" IsReadOnly="True"/>
        </Border>

        <Border x:Name ="Border_pss" Grid.Column="2" CornerRadius="10" Background="#1A1E28" BorderBrush="#7F7F7F" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="146" Height="48" Grid.Row="1">
            <TextBox x:Name ="password_field" TextWrapping="Wrap" Background="#1A1E28" BorderThickness="0" VerticalScrollBarVisibility="Hidden" Margin="5,6,5,6" IsReadOnly="True" Foreground="White" FontSize="12"/>
        </Border>
        <Button Grid.Row="3" Grid.Column="2" Content="Encrypt" Width="84" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,213,0,0" Background="#149414" FontSize="14" FontFamily="Segoe UI" FontWeight="Bold" Click="Button_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name ="border" Background="{TemplateBinding Background}" 
                    CornerRadius="10" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#1AAE1A"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#0F5E0F"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name ="button_password" Grid.Column="2" Content="Password" Margin="2,0,0,0" VerticalAlignment="Center" Height="58" Background="Transparent" BorderThickness="0" FontFamily="Segoe UI" FontWeight="Bold" FontSize="20" Grid.RowSpan="2" Click="button_password_Click" Foreground="Gray">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                        <ContentPresenter x:Name="contentPresenter"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#149414"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#0F5E0F"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>

        </Button>
        <Canvas>
            <Label x:Name="errorLabel"
              Grid.Column="2"
               Content="Please enter a password"
HorizontalAlignment="Left"
VerticalAlignment="Center"
Width="308"
Foreground="Red"
FontWeight="Bold" Canvas.Left="434" Canvas.Top="60" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                   Visibility="Collapsed"
/>
        </Canvas>
        <Button x:Name ="button_Encrypt" Grid.Column="1" Content="Encryption" Margin="24,0,24,0" VerticalAlignment="Center" Height="98" Background="Transparent" BorderThickness="0" FontFamily="Verdana" FontWeight="Bold" FontSize="40" Foreground="Green">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                        <ContentPresenter x:Name="contentPresenter"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#149414"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#0F5E0F"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>

        </Button>
        <Button x:Name ="button_Decrypt" Grid.Column="3" Content="Decryption" Margin="24,0,24,0" VerticalAlignment="Center" Height="98" Background="Transparent" BorderThickness="0" FontFamily="Verdana" FontWeight="Bold" FontSize="40" Foreground="Gray" >
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                        <ContentPresenter x:Name="contentPresenter"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="DarkRed"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="Firebrick"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>

        </Button>







    </Grid>
</Window>

    