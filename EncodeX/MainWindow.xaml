            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="#1A1E28" CornerRadius="4" BorderThickness="2" BorderBrush="Green" Margin="0,0,-6,-8">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="icons/enc_save.png" Width="38" Height="30" Stretch="Uniform"/>


