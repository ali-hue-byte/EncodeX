

<Window x:Class="EncodeX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EncodeX"
        mc:Ignorable="d"
        Title="EncodeX" Height="620" Width="1000" ResizeMode="NoResize"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1A1E28" Offset="0"/>
            <GradientStop Color="#2A2F38" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid ClipToBounds="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="174"/>
            <ColumnDefinition Width="338"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="338"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="118"/>
            <RowDefinition Height="99"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="328"/>
        </Grid.RowDefinitions>

        <Border x:Name="Border_haha" Grid.Row="0" Grid.RowSpan="4" BorderBrush="#149414" BorderThickness="0,0,2,0" Margin="0,0,30,10" ClipToBounds="False" Panel.ZIndex="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#2E3440" Offset="0"/>
                    <GradientStop Color="#303447" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Direction="180"
        ShadowDepth="8"
        BlurRadius="30"
        Opacity="1"
        Color="#3CFF3C"/>
            </Border.Effect>
        </Border>

        <Border x:Name="Border_encrypt" Grid.Row="2" Grid.Column="1" CornerRadius="10" Background="#1A1E28" BorderBrush="#149414" BorderThickness="2" Margin="60,24,6,192" Grid.RowSpan="2">
            <TextBox x:Name ="input_field" TextWrapping="Wrap" Background="#1A1E28" BorderThickness="0" VerticalScrollBarVisibility="Hidden"  Margin="8,8,8,8" Foreground="White" FontSize="15"/>
        </Border>

        <Border x:Name="Border_decrypt" Grid.Row="2" Grid.Column="3" Grid.RowSpan="2" CornerRadius="10" Background="#1A1E28" BorderBrush="#149414" BorderThickness="2" Margin="2,24,60,192">
            <TextBox x:Name="encrypted_field" TextWrapping="Wrap" Background="#1A1E28" BorderThickness="0" VerticalScrollBarVisibility="Hidden" Margin="8,8,8,8" Foreground="White" FontSize="15" IsReadOnly="True"/>
        </Border>

        <Border x:Name ="Border_pss" Grid.Column="2" CornerRadius="10" Background="#1A1E28" BorderBrush="#7F7F7F" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="146" Height="48" Grid.Row="1">
            <TextBox x:Name ="password_field" TextWrapping="Wrap" Background="#1A1E28" BorderThickness="0" VerticalScrollBarVisibility="Hidden" Margin="5,6,5,6" IsReadOnly="True" Foreground="White" FontSize="12"/>
        </Border>
        <Button x:Name ="encrypt_btn" Grid.Row="3" Grid.Column="2" Content="Encrypt" Width="98" Height="39" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10,223,10,10" Background="#149414" FontSize="14" FontFamily="Segoe UI" FontWeight="Bold" Click="Button_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
            </Button.RenderTransform>
            <Button.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1.1" Duration="0:0:0.2" />
                            <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1.1" Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.2" />
                            <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
            <Button.Template>

                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                    CornerRadius="10" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}">

                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#1AAE1A"/>

                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#0F5E0F"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="button_password" Grid.Column="2" Content="Password" Margin="2,0,0,0"
        VerticalAlignment="Center" Height="58" Background="Transparent"
        BorderThickness="0" FontFamily="Segoe UI" FontWeight="Bold" FontSize="20"
        Grid.RowSpan="2" Click="button_password_Click" Foreground="Gray">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                        <ContentPresenter x:Name="contentPresenter"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#1AAE1A"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#0F5E0F"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="Tag" Value="Locked"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#3B82F6"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Canvas>
            <Label x:Name="errorLabel"
              Grid.Column="2"
               Content="Please enter a password"
HorizontalAlignment="Left"
VerticalAlignment="Top"
Width="308"
Foreground="Red"
FontWeight="Bold" Canvas.Left="432" Canvas.Top="209" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                   Visibility="Collapsed"
/>
        </Canvas>
        <Button x:Name ="button_Encrypt" Grid.Column="1" Content="Encryption" Margin="24,0,24,0" VerticalAlignment="Center" Height="98" Background="Transparent" BorderThickness="0" FontFamily="Verdana" FontWeight="Bold" FontSize="40" Foreground="#149414" Click="encrypt_clicked">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                        <ContentPresenter x:Name="contentPresenter"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#1AAE1A"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#0F5E0F"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>

        </Button>
        <Button x:Name ="button_Decrypt" Grid.Column="3" Content="Decryption" Margin="24,0,24,0" VerticalAlignment="Center" Height="98" Background="Transparent" BorderThickness="0" FontFamily="Verdana" FontWeight="Bold" FontSize="40" Foreground="Gray" Click="decrypt_clicked">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                        <ContentPresenter x:Name="contentPresenter"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#3B82F6"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#1D4ED8"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>

        </Button>
        <Button x:Name ="decrypt_btn" Grid.Row="3" Grid.Column="2" Content="Decrypt" Width="98" Height="39" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,223,0,0" Background="#2563EB" FontSize="14" FontFamily="Segoe UI" FontWeight="Bold" Click="decrypt_txt" RenderTransformOrigin="0.5,0.5" Visibility="Hidden">
            <Button.RenderTransform>
                <ScaleTransform x:Name="scale1" ScaleX="1" ScaleY="1"/>
            </Button.RenderTransform>
            <Button.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="scale1" Storyboard.TargetProperty="ScaleX" To="1.1" Duration="0:0:0.2" />
                            <DoubleAnimation Storyboard.TargetName="scale1" Storyboard.TargetProperty="ScaleY" To="1.1" Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="scale1" Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.2" />
                            <DoubleAnimation Storyboard.TargetName="scale1" Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>

            </Button.Triggers>
            <Button.Template>

                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                        CornerRadius="10" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}">

                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#3B82F6"/>

                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>






    </Grid>
</Window>
