<Window x:Class="EncodeX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EncodeX"
       
        xmlns:gif="clr-namespace:XamlAnimatedGif;assembly=XamlAnimatedGif"

        mc:Ignorable="d"
        Title="EncodeX" Height="620" Width="1050" ResizeMode="NoResize" Icon="/icons/main_icon.ico"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True" >

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1A1E28" Offset="0"/>
            <GradientStop Color="#2A2F38" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid ClipToBounds="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="174"/>
            <ColumnDefinition Width="338"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="338"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="118"/>
            <RowDefinition Height="99"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="328"/>
        </Grid.RowDefinitions>



        <Border x:Name="Border_haha" Grid.Row="0" Grid.RowSpan="4" BorderBrush="#149414" BorderThickness="0,0,2,0" Margin="0,0,100,10" ClipToBounds="False" Panel.ZIndex="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#2E3440" Offset="0"/>
                    <GradientStop Color="#303447" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Direction="180"
        ShadowDepth="8"
        BlurRadius="30"
        Opacity="1"
        Color="#3CFF3C"/>
            </Border.Effect>
            <Border.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ThicknessAnimation Storyboard.TargetProperty="Margin" To="0,0,0,10" Duration="0:0:0.3" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ThicknessAnimation Storyboard.TargetProperty="Margin" To="0,0,100,10" Duration="0:0:0.3" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
            <StackPanel Margin="0,0,0,4">
                <Grid Height="604" RenderTransformOrigin="0.552,0.512">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>

                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>

                    <Button  x:Name="Button_text" Grid.Row ="0" Margin="0,229,0,5" Background="#2E3440" Click="button_Text_Click">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="#2E3440" CornerRadius="8" BorderThickness="3" BorderBrush="White">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Image Source="pack://application:,,,/icons/text_icon.png" Width="68" Stretch="Uniform"/>
                                        <Label Content="Text"
                           Width="80"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           FontSize="24"
                           FontWeight="Bold"
                           FontFamily="Verdana"
                           Foreground="White"
                           Margin="10,0,0,0"
                                       />
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#3B4252"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#4C566A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>


                    </Button>
                    <Button x:Name="button_files" Grid.Row="1" Margin="0,0,0,234"
        Background="#2E3440"  Click="button_files_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border_files" Background="{TemplateBinding Background}" 
                    CornerRadius="8" BorderThickness="1" BorderBrush="White">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Image Source="pack://application:,,,/icons/files_icon.png"
                           Width="68" Height="50" Stretch="Uniform"/>

                                        <TextBlock Text="Files"
                               Width="80"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               FontSize="24"
                               FontWeight="Bold"
                               FontFamily="Verdana"
                               Foreground="White"
                               Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border_files" Property="Background" Value="#3B4252"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border_files" Property="Background" Value="#4C566A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>
            </StackPanel>


        </Border>

        <Border x:Name="Border_encrypt" Grid.Row="2" Grid.Column="1" CornerRadius="10" Background="#1A1E28" BorderBrush="#149414" BorderThickness="2" Margin="33,24,33,192" Grid.RowSpan="2">
            <TextBox x:Name ="input_field" TextWrapping="Wrap" Background="#1A1E28" BorderThickness="0" VerticalScrollBarVisibility="Hidden"  Margin="8,8,8,8" Foreground="White" FontSize="15"/>
        </Border>

        <Border x:Name="Border_decrypt" Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" CornerRadius="10" Background="#1A1E28" BorderBrush="#149414" BorderThickness="2" Margin="98,24,114,192" Grid.ColumnSpan="2">
            <TextBox x:Name="encrypted_field" TextWrapping="Wrap" Background="#1A1E28" BorderThickness="0" VerticalScrollBarVisibility="Hidden" Margin="8,8,8,8" Foreground="White" FontSize="15" IsReadOnly="True"/>
        </Border>

        <Border x:Name ="Border_pss" Grid.Column="1" CornerRadius="10" Background="#1A1E28" BorderBrush="#7F7F7F" BorderThickness="2" VerticalAlignment="Top" Height="48" Grid.Row="1" Grid.ColumnSpan="2" Margin="296,24,48,0">
            <TextBox x:Name ="password_field" TextWrapping="Wrap" Background="#1A1E28" BorderThickness="0" VerticalScrollBarVisibility="Hidden" Margin="5,6,5,6" IsReadOnly="True" Foreground="White" FontSize="12"/>
        </Border>
        <Button x:Name ="encrypt_btn" Grid.Row="3" Grid.Column="1" Content="Encrypt" Margin="319,223,71,66" Background="#149414" FontSize="14" FontFamily="Segoe UI" FontWeight="Bold" Click="Button_Click" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
            <Button.RenderTransform>
                <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
            </Button.RenderTransform>
            <Button.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1.1" Duration="0:0:0.2" />
                            <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1.1" Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.2" />
                            <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
            <Button.Template>

                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                    CornerRadius="10" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}">

                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#1AAE1A"/>

                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#0F5E0F"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="button_password" Grid.Column="1" Content="Password" Margin="294,0,46,0"
        VerticalAlignment="Center" Height="58" Background="Transparent"
        BorderThickness="0" FontFamily="Segoe UI" FontWeight="Bold" FontSize="20"
        Grid.RowSpan="2" Click="button_password_Click" Foreground="Gray" Grid.ColumnSpan="2">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                        <ContentPresenter x:Name="contentPresenter"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#1AAE1A"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#0F5E0F"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="Tag" Value="Locked"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#3B82F6"/>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsPressed" Value="True"/>
                                <Condition Property="Tag" Value="Locked"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground"  Value="#1D4ED8"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Canvas>
            <Label x:Name="errorLabel"
              Grid.Column="2"
               Content="Please enter a password"
HorizontalAlignment="Left"
VerticalAlignment="Center"
Width="416"
Foreground="Red"
FontWeight="Bold" Canvas.Left="339" Canvas.Top="210" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                   Visibility="Hidden"
/>
        </Canvas>
        <Button x:Name ="button_Encrypt"             
            AutomationProperties.Name=""
AutomationProperties.HelpText=""
            ToolTipService.IsEnabled="False" Tag ="Clicked" ToolTip= "{x:Null}" Content="Encryption" Margin="153,0,69,0" VerticalAlignment="Center" Height="98" Background="Transparent" BorderThickness="0" FontFamily="Verdana" FontWeight="Bold" FontSize="40" Foreground="#149414" Click="encrypt_clicked" Grid.ColumnSpan="2">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                        <ContentPresenter x:Name="contentPresenter"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#1AAE1A"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#0F5E0F"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>

        </Button>
        <Button x:Name ="button_Decrypt"             ToolTip="{x:Null}"
            AutomationProperties.Name=""
AutomationProperties.HelpText=""
            ToolTipService.IsEnabled="False"  Grid.Column="2" Content="Decryption" Margin="129,0,69,0" VerticalAlignment="Center" Height="98" Background="Transparent" BorderThickness="0" FontFamily="Verdana" FontWeight="Bold" FontSize="40" Foreground="Gray" Click="decrypt_clicked" Grid.ColumnSpan="2">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                        <ContentPresenter x:Name="contentPresenter"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#3B82F6"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#1D4ED8"/>
                        </Trigger>


                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>

        </Button>
        <Button x:Name ="decrypt_btn" Grid.Row="3" Grid.Column="1" Content="Decrypt" Width="98" Height="39" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="319,223,0,0" Background="#2563EB" FontSize="14" FontFamily="Segoe UI" FontWeight="Bold" Click="decrypt_txt" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2" Visibility="Hidden">
            <Button.RenderTransform>
                <ScaleTransform x:Name="scale1" ScaleX="1" ScaleY="1"/>
            </Button.RenderTransform>
            <Button.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="scale1" Storyboard.TargetProperty="ScaleX" To="1.1" Duration="0:0:0.2" />
                            <DoubleAnimation Storyboard.TargetName="scale1" Storyboard.TargetProperty="ScaleY" To="1.1" Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="scale1" Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.2" />
                            <DoubleAnimation Storyboard.TargetName="scale1" Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>

            </Button.Triggers>
            <Button.Template>

                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                        CornerRadius="10" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}">

                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#3B82F6"/>

                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Label x:Name ="arrow" Height="80" Grid.Column="1" Grid.ColumnSpan="2" Margin="318,2,76,246" Grid.Row="3" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
            <Grid Height="76" Width="85">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="46.5"/>
                </Grid.RowDefinitions>



                <Image x:Name="arrow1" Source="/icons/Arrow.png" Stretch="Uniform" Margin="-2,6,0,0" Grid.RowSpan="2" RenderTransformOrigin="0.498,0.514" HorizontalAlignment="Left" Width="74" Height="62" VerticalAlignment="Top">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1"/>
                            <SkewTransform/>
                            <RotateTransform Angle="-360.271"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image x:Name="progress1" HorizontalAlignment="Left" Visibility="Hidden"
 VerticalAlignment="Top"
Source="/icons/arrow_progress.png" RenderTransformOrigin="0.5,0.5" Width="67" Height="68" Stretch="Uniform" Margin="1,1,0,0" Grid.RowSpan="2">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>

                <Image x:Name="progress2" Margin="0,1,11,8" Source="/icons/progress1.png" Height="68" Stretch="Fill" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5" Visibility="Hidden">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>




            </Grid>


        </Label>
